{
  "name": "@flexydox/issue-pr-commenter-action",
  "description": "GitHub Action to comment on issues and pull requests using OpenAI's model.",
  "version": "1.0.2",
  "author": "",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/flexydox/issue-pr-commenter-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flexydox/issue-pr-commenter-action.git"
  },
  "bugs": {
    "url": "https://github.com/flexydox/issue-pr-commenter-action/issues"
  },
  "keywords": [
    "actions"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "all": "npm run format:write && npm run lint && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "openai": "^4.97.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.9",
    "@github/local-action": "^3.2.1",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/node": "^20.17.50",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.4.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.2",
    "rollup": "^4.41.1",
    "ts-jest": "^29.3.4",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.8.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
